@import '../../../../stylus/_colors'

header
	background color-tertiary-tint
	color color-light

	&>div
		width 100%
		max-width 1080px
		margin 0 auto
		display flex
		flex-wrap wrap
		align-items center

		h1
			width 100px
			padding 10px 20px 10px 0

		&>ul
			flex auto

			li
				display inline-table

				a
					display table
					font-size 16px
					padding 5px 10px
					background-image linear-gradient(to top, color-primary 0%, color-secondary 100%)
					background-size 0% 2px
					background-position bottom
					background-repeat no-repeat
					transition 0.5s

					&:hover, &.active
						background-size 100% 2px
						cursor pointer

		&>div
			cursor pointer
			padding 10px
			position relative

			&>p>*
				vertical-align middle
			img
				max-width 150px
				padding-right 20px

			i.fas
				display none

			&:hover
				background rgba(255, 255, 255, 0.2)

				i.fas
					display inline
				i.far
					display none

				ul
					opacity 1
					z-index 100
					transform translate(0, 0)

			ul
				display table
				position absolute
				top 100%
				left 0
				z-index -1
				opacity 0
				width: 100%
				min-width: max-content
				color color-dark
				background color-light
				border-radius: 5px
				box-shadow: 1px 1px 3px 1px rgba(0, 0, 0, 0.2)
				transform translate(0, -10px)
				transition 0.5s

				&:before
					content ''
					display table
					position absolute
					top 0
					left 50%
					width 10px
					height 10px
					transform translate(-50%, -50%) rotate(45deg)
					background color-dark

				a
					display table
					padding 5px 10px
					cursor pointer
					min-width 100%

					&:hover
						color color-primary
